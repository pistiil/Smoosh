					<li><a href="bottles.php">Bottles</a></li>
					<li><a href="cans.php">Cans</a></li>
					<li><a href="recipes.php">Recipes</a></li>
					<li><a href="about.php">About</a></li>
					<li><a href="contactus.php">Contact Us</a></li>
					{% endif %}

					{% block addnav %}
					{% endblock addnav %}
				</ul>
			</nav>
		</header>


		<!-- Main -->
		<main role="main">
			{% block main %}
			{% endblock main %}
		</main>

		<!-- Bouton pour revenir en haut -->
		{% if lang == 'fr' %}
		<button class="ontop" onclick="window.location.href = '#top';">Retour en haut <i class="bi bi-arrow-up"></i></button>
		{% elseif lang == 'en' %}
		<button class="ontop" onclick="window.location.href = '#top';">Back to top <i class="bi bi-arrow-up"></i></button>
		{% endif %}

		<!-- Footer -->
		<footer role="contentinfo">
			{% block footer %}
			<div class="foot">
				<!-- Liens vers les pages en version française -->
				<div class="lien">
					<ul>
						<li><a href="index.php">Accueil</a></li>
						<li><a href="bouteilles.php">Bouteilles</a></li>
						<li><a href="canettes.php">Canettes</a></li>
