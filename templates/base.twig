						<li><a href="contact.php">Nous Contacter</a></li>
						<li><a href="merci.php">Merci</a></li>
					</ul>
				</div>		
				
				<!-- Liens vers les pages en version anglaise -->
				<div class="lien">
					<ul>
						<li><a href="home.php">Home</a></li>
						<li><a href="bottles.php">Bottles</a></li>
						<li><a href="cans.php">Cans</a></li>
						<li><a href="recipes.php">Recipes</a></li>
						<li><a href="about.php">About</a></li>
						<li><a href="contactus.php">Contact Us</a></li>
						<li><a href="thankyou.php">Thank You</a></li>
					</ul>
				</div>
			</div>
			<hr>
			<p class="signature">FLORENCE Zoé ©</p>
			{% endblock footer %}
		</footer>
	</div>
</body>

</html>